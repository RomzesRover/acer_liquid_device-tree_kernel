<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="general_section"
        android:title="Sms and call LED's.">

        <CheckBoxPreference
            android:key="pulse_enabled"
            android:title="@string/notification_pulse_title" 
	    android:summary="Изменения вступят в силу со следующего уведомления."/>
   </PreferenceCategory>

   <PreferenceCategory
       android:key="general_section_battery"
       android:title="Battery LED.">

	<CheckBoxPreference
            android:key="battery_light"
            android:title="@string/battery_light_title"
            android:summary="Изменения вступят в силу немедленно."/>

	<CheckBoxPreference
            android:key="battery_low_pulse"
            android:title="@string/battery_low_pulse_title"
            android:summary="Изменения вступят в силу немедленно."/>
   </PreferenceCategory>
	


</PreferenceScreen>
